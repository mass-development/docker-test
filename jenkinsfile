pipeline {
    agent any

    stages {
        stage('checkout') {
            steps {
                sh 'echo "checking out the repository"'
            }
        }

        stage('build') {
            steps {
                sh 'echo "building the repository"'
            }
        }
    }

    post {
        success {
            echo 'âœ… Pipeline succeeded'
        }
        failure {
            echo 'âŒ Pipeline failed'
        }
        always {
            echo 'ğŸ§¹ Pipeline finished (success or failure)'
        }
    }
}
